{
    "options": {
        "disable_collapse": true
    },
    "properties": {
        "vars": {
            "description": "Define your own variables here!",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "default": "temp1"
                    },
                    "default": {
                        "type": "number",
                        "default": "0",
                        "description": "The default value of the variable at boot"
                    },
                    "resolution": {
                        "type": "number",
                        "default": "16348",
                        "minimum": "1",
                        "maximum": "65535",
                        "description": "With resolution of 100, the variable would have 0.01 steps."
                    },
                    "persistent": {
                        "type": "boolean",
                        "default": false,
                        "description": "If true, the variable will save it's value. Variable saving may not be instant. Once marked as persistent, unmarking it requires deleting the key in prefs.json"
                    },
                    "unit": {
                        "type": "string",
                        "required": false,
                        "default": "",
                        "enum": [
                            "",
                            "bang",
                            "bool",
                            "count",
                            "dB",
                            "dBm",
                            "mm",
                            "degC",
                            "kg",
                            "V",
                            "A",
                            "Hz",
                            "Ohm",
                            "l",
                            "s",
                            "%"
                        ]
                    }
                }
            }
        },
        "clockworks": {
            "description": "A clockwork is a virtual timer machine that can trigger different actions in different conditions",
            "format": "tabs-top",
            "items": {
                "options": {
                    "disable_collapse": true
                },
                "properties": {
                    "name": {
                        "type": "string",
                        "default": "Untitled Clockwork"
                    },
                    "states": {
                        "description": "A state represents a mode, status, or condition that a Clockwork can be in.",
                        "format": "tabs-top",
                        "options": {
                            "disable_collapse": true
                        },
                        "items": {
                            "id": "state",
                            "headerTemplate": "{{name}}",
                            "watch": {
                                "name": "state.name"
                            },
                            "options": {
                                "disable_collapse": true
                            },
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "default": "default"
                                },
                                "bindings": {
                                    "description": "While a state is active, a binding sets the value of a variable. similar to spreadsheet expressions",
                                    "options": {
                                        "disable_collapse": true
                                    },
                                    "items": {
                                        "properties": {
                                            "source": {
                                                "title": "Source Expression",
                                                "type": "string",
                                                "options": {
                                                    "inputAttributes": {
                                                        "list": "expr_completions"
                                                    }
                                                },
                                                "required": true
                                            },
                                            "target": {
                                                "title": "Target Variable",
                                                "type": "string",
                                                "options": {
                                                    "inputAttributes": {
                                                        "list": "tags"
                                                    }
                                                },
                                                "required": true
                                            },
                                            "mode": {
                                                "type": "string",
                                                "enum": [
                                                    "onchange",
                                                    "onenter",
                                                    "onframe"
                                                ],
                                                "title": "Mode",
                                                "required": true
                                            },
                                            "fadeInTime": {
                                                "title": "Fade In Time(s)",
                                                "type": "string",
                                                "options": {
                                                    "inputAttributes": {
                                                        "list": "expr_completions"
                                                    }
                                                },
                                                "required": false
                                            },
                                            "alpha": {
                                                "title": "Alpha Blend(0-1)",
                                                "type": "string",
                                                "options": {
                                                    "inputAttributes": {
                                                        "list": "expr_completions"
                                                    }
                                                },
                                                "required": false
                                            },
                                            "layer": {
                                                "title": "Layer",
                                                "type": "number",
                                                "description": "Overlay layer, 0 is the background",
                                                "required": false
                                            },

                                            "startPosition": {
                                                "title": "Start Position",
                                                "type": "number",
                                                "description": "Start location"
                                            },
                                            "count": {
                                                "title": "Count",
                                                "type": "number",
                                                "description": "Number of slots to affect"
                                            }
                                        },
                                        "title": "Binding",
                                        "type": "object",
                                        "options": {
                                            "disable_properties": false,
                                            "disable_collapse": true
                                        }
                                    },
                                    "title": "Bindings",
                                    "type": "array"
                                }
                            },
                            "title": "State",
                            "type": "object"
                        },
                        "title": "States",
                        "type": "array"
                    }
                },
                "title": "Clockwork",
                "id": "clockwork",
                "headerTemplate": "{{name}}",
                "watch": {
                    "name": "clockwork.name"
                },
                "type": "object"
            },
            "title": "Clockworks",
            "type": "array"
        }
    },
    "title": "Automation",
    "type": "object"
}